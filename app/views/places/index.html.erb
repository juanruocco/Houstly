<h1>HOTELES!</h1>
<table>
  <%= render "form" %>

  <%
  places = Place.all
  places.each do |place|
 %>
  <tr>
    <td><%= link_to place.name_id, edit_place_path(place), class: "btn btn-default" %></td>
    <td><%= place.name %></td>
    <td><%= place.description %></td>
    <td><%= place.facebook_url %></td>
    <td><%= place.email %></td>
    <td><%= place.cellphone %></td>
    <td><%= place.logo_path %></td>
    <td><%= place.location_url %></td>
    <td><%= place.location_name %></td>
    <td><%= place.video_url %></td>
    <td><%= place.music_path %></td>
    <td><%= place.max_slider_images %></td>
    <td><%= place.max_thumb_images %></td>
    <td>
      <%= button_to "Delete", place, method: :delete, data: { confirm: "Are you sure you wish to delete #{place.name} #{place.description}?" }, class: "btn btn-danger" %>
    </td>
  </tr>
  <% end %>
</table>
<br/>
<%= link_to 'Tours', tours_path %>
<br/>
<%= link_to 'Rooms', rooms_path %>

