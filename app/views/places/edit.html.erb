<h1>Edit Hotel</h1>

<table >
  <%= form_for @place do |f| %>
  <tr>
    <td width="15%">Name: </td>
    <td width="85%" >
      <%= f.text_field :name , :size => 150%>
    </td>
  </tr>
  <tr>
    <td>Description: </td>
    <td>
      <%= f.text_field :description, :size => 150 %>
    </td>
  </tr>
  <tr>
    <td>Location: </td>
    <td>
      <%= f.text_field :location_name, :size => 150 %>
    </td>
  </tr>
  <tr>
    <td>Video url: </td>
    <td>
      <%= f.text_field :video_url, :size => 150 %>
    </td>
  </tr>
  <tr>
    <td>Number Sliders Images: </td>
    <td>
      <%= f.text_field :max_slider_images %>
    </td>
  </tr>
  <tr>
    <td>Number Thumb Images: </td>
    <td>
      <%= f.text_field :max_thumb_images %>
    </td>
  </tr>
  <tr>
    <td><%= link_to "Rooms", rooms_path(@place) %></td>
  </tr>
  <tr>
    <td><%= link_to "Tours", tours_path(@place) %></td>
  </tr>
  <tr>
    <td><%= link_to "activities", activities_path(@place) %></td>
  </tr>
  <tr>
    <td><%= link_to "common areas", common_areas_path(@place) %></td>
  </tr>

  <tr>
    <td><%= f.submit "Submit" %></td>
  </tr>


  <% end %>
</table>
