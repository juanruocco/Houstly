<h1>Edit Web Components</h1>

<table >
  <%= form_for ([@place,@webcomponent]) do |f| %>
  <tr>
    <td width="15%">Name: </td>
    <td width="85%" >
      <%= f.text_field :name , :size => 30%>
    </td>
  </tr>
  <tr>
    <td>Description: </td>
    <td>
      <%= f.text_field :description, :size => 150 %>
    </td>
  </tr>
  <tr>
    <td>Estilo: </td>
    <td>
      <%= f.text_field :style, :size => 50 %>
    </td>
  </tr>
  <tr>
    <td><%= f.submit "Submit" %></td>
  </tr>

  <tr>
    <td><%= link_to "images with descriptions", place_webcomponent_imagedescriptions_path(@place,@webcomponent) %></td>
  </tr>

  <tr>
    <td><%= link_to 'Back', place_webcomponents_path %></td>
  </tr>

  <% end %>


</table>
