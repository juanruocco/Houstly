<h1>Cuartos!</h1>
<table>
  <%= form_for @room do |f| %>
    <tr>
      <td>Name: <%= f.text_field :name %></td>
      <td>Description: <%= f.text_field :description %></td>
      <td><%= f.submit 'Add', class: 'btn btn-primary' %></td>
    </tr>
  <% end %>

  <%
  rooms = current_place.rooms
  rooms.each do |room| %>
      <%= form_for room do |f| %>
      <tr>
        <td>Name: <%= f.text_field :name %></td>
        <td>Description: <%= f.text_field :description %></td>
        <td><%= f.submit 'Update', class: 'btn btn-primary' %>
        <td>
            <%= f.submit 'Delete', class: 'btn btn-primary' %>
            <!-- #button_to "Delete", room, method: :delete, data: { confirm: "Are you sure you wish to delete #{room.name} #{room.description}?" }, class: "btn btn-danger"
         -->
         </td>
      </tr>
      <% end %>
  <% end %>
</table>
